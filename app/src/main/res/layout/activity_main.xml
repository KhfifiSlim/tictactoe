<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical"
    tools:context=".RobotMode">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_marginLeft="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Player turn : "
            android:textColor="@color/brown"
            android:textSize="30sp"
            android:textStyle="bold"
            android:id="@+id/turn"/>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/playerTurn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cross" />



        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/cross"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-40dp"
        android:gravity="center"

        />

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-32.5dp"
        android:layout_marginBottom="13dp"

        android:background="@drawable/count_background"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtXWins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="0"
            android:textColor="#353535"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:weightSum="10"
        android:layout_marginBottom="-35dp"
        android:layout_marginTop="-60dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></View>

        <ImageView
            android:layout_width="0dp"
            android:padding="6dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_sound"></ImageView>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"></View>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sound"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.25"></View>

        <Switch
            android:id="@+id/sound_switch"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:checked="true"
            android:layout_height="wrap_content"
            android:textOff="OFF"
            android:textOn="ON"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></View>


    </LinearLayout>

    <com.example.tictac.GrilleJeuCustomView
        android:id="@+id/grilleJeu"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="10dp"

        />







    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/circle"
        android:layout_marginLeft="275dp"
        android:layout_marginBottom="-33dp"
        android:gravity="center"
        android:layout_marginTop="70dp"
        />

            <LinearLayout
                android:layout_width="50dp"
                android:orientation="vertical"
                android:layout_marginLeft="310dp"
                android:gravity="center"
                android:layout_marginTop="0dp"

                android:layout_marginBottom="-33dp"
                android:background="@drawable/count_background"
                android:layout_height="35dp"
                >

                <TextView
                    android:id="@+id/txtOWins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="#353535"
                    android:textSize="20dp"></TextView>

            </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-70dp"
        >



        <Button
            android:id="@+id/btnreset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_1"

            android:drawablePadding="10dp"
            android:padding="15dp"
            android:shadowRadius="@integer/material_motion_duration_long_2"
            android:text="RESET"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="10dp"
            android:background="@drawable/button_1"
            android:padding="15dp"
            android:shadowRadius="@integer/material_motion_duration_long_2"
            android:text="QUIT"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>